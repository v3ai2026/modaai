{
  "name": "v3ai-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:moda": "pnpm --filter @modaai/moda-studio dev",
    "dev:portal": "pnpm --filter @modaai/portal dev",
    "build:packages": "pnpm --filter './packages/*' build",
    "build:apps": "pnpm --filter './apps/*' build",
    "build": "pnpm build:packages && pnpm build:apps",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
