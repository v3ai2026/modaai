{
  "name": "@v3ai/platform",
  "version": "1.0.0",
  "description": "V3 AI 统一平台 - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:moda": "turbo run dev --filter=moda-studio",
    "dev:commerce": "turbo run dev --filter=vision-commerce",
    "dev:deploy": "turbo run dev --filter=deploy-hub",
    "dev:intelligence": "turbo run dev --filter=intelligence-hub",
    "dev:portal": "turbo run dev --filter=portal",
    "dev:all": "concurrently \"pnpm dev:moda\" \"pnpm dev:commerce\" \"pnpm dev:portal\"",
    "build": "turbo run build",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:packages": "turbo run build --filter='./packages/*'",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,md}\"",
    "docs:dev": "cd docs && vitepress dev",
    "docs:build": "cd docs && vitepress build",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/node": "^22.0.0",
    "concurrently": "^9.0.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.8.0",
    "vitepress": "^1.5.0"
  }
}
